<html>
  <head>
    <title>Node Music App</title>
    <link rel="preconnect" href="https://fonts.googleapis.com" />
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
    <link
      href="https://fonts.googleapis.com/css2?family=Montserrat:ital,wght@0,100..900;1,100..900&family=Poppins:ital,wght@0,100;0,200;0,300;0,400;0,500;0,600;0,700;0,800;0,900;1,100;1,200;1,300;1,400;1,500;1,600;1,700;1,800;1,900&display=swap"
      rel="stylesheet"
    />
    <link rel="stylesheet" href="/css/styles.css" />
  </head>
  <body>
    <div class="playerBar">
      <span class="audioPlayer">
        <a
          class="audioPlayer-thumbnail"
          href="http://localhost:6060/images/no_thumbnail.png"
          target="_blank"
          title="Thumbnail"
        >
          <img
            class="audioPlayer-thumbnail-image"
            src="http://localhost:6060/images/no_thumbnail.png"
            width="100"
            height="100"
            title="Thumbnail"
          />
        </a>

        <div class="audioPlayer-progress" title="Duration" hidden>
          <p>0:00/0:00</p>
        </div>

        <audio autoplay oncanplaythrough="handleSongLoaded('<%= songId %>')">
          <source
            src="http://localhost:6060/play?id=<%= songId %>"
            type="audio/webm"
          />
        </audio>
      </span>

      <span class="audioInfo">
        <a
          class="audioInfo-title"
          href="#"
          title="Watch on YouTube"
          target="_blank"
        >
          <h1 class="audioInfo-title-text">Title</h1>
        </a>

        <a
          class="audioInfo-channel"
          href="#"
          title="View channel on YouTube"
          target="_blank"
        >
          <h3 class="audioInfo-channel-text">Channel</h3>
        </a>

        <span class="audioInfo-controls">
          <img
            class="audioInfo-controls-skipStart"
            src="http://localhost:6060/icons/skip-start.svg"
            title="Previous"
          />

          <img
            class="audioInfo-controls-playbackButton"
            src="http://localhost:6060/icons/file-down.svg"
            title="Loading"
          />

          <img
            class="audioInfo-controls-skipEnd"
            src="http://localhost:6060/icons/skip-end.svg"
            title="Next"
          />
        </span>
      </span>

      <div class="extraControls">
        <img
          class="extraControls-repeat"
          src="http://localhost:6060/icons/repeat.svg"
          title="Turn loop on"
        />

        <img
          class="extraControls-volume"
          src="http://localhost:6060/icons/volume.svg"
          title="Adjust Volume"
        />

        <input
          type="range"
          class="extraControls-volumeRange"
          min="0"
          max="100"
          step="1"
        />
      </div>
    </div>

    <script src="/js/index.js"></script>
  </body>
</html>
