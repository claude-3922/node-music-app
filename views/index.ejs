<html>
  <head>
    <title>Musix</title>
    <link rel="preconnect" href="https://fonts.googleapis.com" />
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
    <link
      href="https://fonts.googleapis.com/css2?family=Montserrat:ital,wght@0,100..900;1,100..900&family=Open+Sans:ital,wght@0,300..800;1,300..800&family=Poppins:ital,wght@0,100;0,200;0,300;0,400;0,500;0,600;0,700;0,800;0,900;1,100;1,200;1,300;1,400;1,500;1,600;1,700;1,800;1,900&display=swap"
      rel="stylesheet"
    />
    <link rel="stylesheet" href="/css/styles.css" />
  </head>
  <body>
    <div class="navBar">
      <span class="navBar-start">
        <span class="navBar-start-brand">
          <a href="#"
            ><img
              src="http://localhost:6060/icons/soundwave.svg"
              width="48"
              height="48"
            />
          </a>
          <a href="#">
            <h1>musix</h1>
          </a>
        </span>

        <input
          type="search"
          class="navBar-start-searchBar"
          placeholder="Search a song"
          name="q"
          spellcheck="false"
          autocomplete="off"
        />
      </span>
      <span class="navBar-end">
        <a
          class="navBar-end-github"
          href="https://github.com/claude-3922/node-music-app"
          target="_blank"
        >
          <img
            src="http://localhost:6060/icons/github.svg"
            height="32"
            width="32"
          />
        </a>
      </span>
    </div>

    <div class="searchResults" hidden></div>

    <main>
      <div class="playerBar">
        <span class="audioPlayer">
          <a
            class="audioPlayer-thumbnail"
            href="http://localhost:6060/images/no_thumbnail.png"
            target="_blank"
            title="Thumbnail"
          >
            <img
              class="audioPlayer-thumbnail-image"
              src="http://localhost:6060/images/no_thumbnail.png"
              width="100"
              height="100"
              title="Thumbnail"
              onerror="this.onerror = null; this.src=(`http://localhost:6060/images/no_thumbnail.png`)"
            />
          </a>

          <div class="audioPlayer-progress" title="Duration" hidden>
            <p>- / -</p>
          </div>

          <audio autoplay></audio>
        </span>

        <span class="audioInfo">
          <a class="audioInfo-title" href="#">
            <h1 class="audioInfo-title-text">Not playing anything</h1>
          </a>

          <a class="audioInfo-channel" href="#">
            <h3 class="audioInfo-channel-text">-</h3>
          </a>

          <span class="audioInfo-controls">
            <img
              class="audioInfo-controls-skipStart"
              src="http://localhost:6060/icons/skip-start.svg"
              title="Previous"
            />

            <img
              class="audioInfo-controls-playbackButton"
              src="http://localhost:6060/icons/play.svg"
              title="?"
            />

            <img
              class="audioInfo-controls-skipEnd"
              src="http://localhost:6060/icons/skip-end.svg"
              title="Next"
            />
          </span>
        </span>

        <div class="extraControls">
          <img
            class="extraControls-repeat"
            src="http://localhost:6060/icons/repeat.svg"
            title="Turn loop on"
          />

          <img
            class="extraControls-volume"
            src="http://localhost:6060/icons/volume.svg"
            title="Adjust Volume"
          />

          <input
            type="range"
            class="extraControls-volumeRange"
            min="0"
            max="100"
            step="1"
          />
        </div>
      </div>
      <div class="mainSection">
        <h1>Up Next</h1>
        <ul></ul>
      </div>
    </main>
    <footer>
      <h4>Data taken from youtube</h4>
    </footer>

    <script src="/js/index.js"></script>
  </body>
</html>
